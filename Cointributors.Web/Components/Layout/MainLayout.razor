@inherits LayoutComponentBase

@implements IDisposable

@inject NavigationManager NavigationManager


<div class="page container">
    <main>
        <nav class="navbar navbar-expand-lg bg-body-tertiary rounded">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">Cointributors</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbars" aria-controls="navbars" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbars">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                                Home
                            </NavLink>
                        </li>
                        <li class="nav-item">
                            <NavLink class="nav-link" href="add-address-gist">
                                Add Gist Address
                            </NavLink>
                        </li>
                        <li class="nav-item">
                            <NavLink class="nav-link" href="repositories">
                                Repositories
                            </NavLink>
                        </li>
                        <li class="nav-item">
                            <NavLink class="nav-link" href="donate/0x4ac46998083c6cd3247e26fee589532ca6b04b1d">
                                Donate
                            </NavLink>
                        </li>
                        <AuthorizeView>
                            <Authorized>
                                <li class="nav-item">
                                    <form action="Account/Logout" method="post">
                                        <AntiforgeryToken />
                                        <input type="hidden" name="ReturnUrl" value="@currentUrl" />
                                        <button type="submit" class="nav-link">
                                            <span class="bi bi-arrow-bar-left-nav-menu" aria-hidden="true"></span> Logout
                                        </button>
                                    </form>
                                </li>
                            </Authorized>
                        </AuthorizeView>
                        <li class="nav-item">

                        </li>
                    </ul>
                    <AuthorizeView>
                        <Metamask @rendermode="InteractiveWebAssembly"/>
                    </AuthorizeView>
                </div>
            </div>
        </nav>

        <article class="container-fluid mt-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

@code {
    private string? currentUrl;

    protected override void OnInitialized()
    {
        currentUrl = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);
        NavigationManager.LocationChanged += OnLocationChanged;
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        currentUrl = NavigationManager.ToBaseRelativePath(e.Location);
        StateHasChanged();
    }

    public void Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
    }
}

